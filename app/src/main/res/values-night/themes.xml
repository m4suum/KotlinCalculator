<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.KotlinCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="30">false</item>
        <item name="android:buttonStyle">@style/buttonNumberBasicCalculator</item>
    </style>

    <style name="buttonNumberBasicCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonBasicCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonBasicCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_number</item>
    </style>

    <style name="buttonOperationBasicCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonBasicCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonBasicCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_operation</item>
    </style>

    <style name="buttonNumberEngineerCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonEngineerCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonEngineerCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_number</item>
    </style>

    <style name="buttonOperationEngineerCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonEngineerCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonEngineerCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:background">@drawable/button_operation</item>
    </style>

    <style name="buttonEqualsSwitchEngineerCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonEngineerCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonEngineerCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_equals_switch</item>
    </style>

    <style name="buttonEqualsSwitchBasicCalculator" parent="android:style/Widget.Button">
        <item name="android:textSize">@dimen/buttonBasicCalculatorTextSize</item>
        <item name="android:layout_margin">@dimen/buttonEngineerCalculatorMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_equals_switch</item>
    </style>

    <style name="tvResult" parent="android:style/Widget.TextView">
        <item name="android:textSize">@dimen/tvResultTextSize</item>
        <item name="android:layout_margin">@dimen/tvResultMargin</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/result_text</item>
        <item name="android:background">@drawable/tv_result</item>
    </style>
</resources>